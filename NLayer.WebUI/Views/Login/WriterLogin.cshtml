
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Yazar Girişi</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/Content/AdminLTE-3.0.4/login-form-20/css/style.css" rel="stylesheet" />

</head>
<body class="img js-fullheight" style="background-image: url(images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Yazar Girişi</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Bir hesabın var mı?</h3>

                        <form action="/Login/WriterLogin" class="signin-form" method="post">

                            <div class="form-group">
                                <input type="text" name="WriterMail" class="form-control" placeholder="email adresi" required>
                            </div>

                            <div class="form-group">
                                <input name="WriterPassword" id="password-field" type="password" class="form-control" placeholder="**" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                            </div>

                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Beni hatırla
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff">Şifremi unuttum</a>
                                </div>
                            </div>

                        </form>

                        <p class="w-100 text-center">&mdash; veya sosyal medya ile giriş yapın &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                            <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Content/AdminLTE-3.0.4/login-form-20/js/jquery.min.js"></script>
    <script src="~/Content/AdminLTE-3.0.4/login-form-20/js/popper.js"></script>
    <script src="~/Content/AdminLTE-3.0.4/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/Content/AdminLTE-3.0.4/login-form-20/js/main.js"></script>

</body>
</html>




