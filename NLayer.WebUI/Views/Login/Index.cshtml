
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Admin Login Sayfası</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/Content/AdminLTE-3.0.4/login-form-19/css/style.css" rel="stylesheet" />

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Admin Girişi</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="        background-image: url(/Content/AdminLTE-3.0.4/images/bg.jpg);"></div>
                        <h3 class="text-center mb-0">Hoşgeldiniz</h3>
                        <p class="text-center">Lütfen bilgileriniz girin</p>

                        <form action="/Login/Index" class="login-form" method="post">
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" name="AdminUserName" class="form-control" placeholder="Kullanıcı adı" required>
                            </div>

                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" name ="AdminPassword" class="form-control" placeholder="*****" required>
                            </div>

                            <div class="form-group d-md-flex">
                                <div class="w-100 text-md-right">
                                    <a href="#">Şifremi Unuttum</a>
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş yap</button>
                            </div>
                        </form>

                        <div class="w-100 text-center mt-4 text">
                            <a href="#">Anasayfaya dön</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Content/AdminLTE-3.0.4/js/jquery.min.js"></script>
    <script src="~/Content/AdminLTE-3.0.4/js/popper.js"></script>
    <script src="~/Content/AdminLTE-3.0.4/js/bootstrap.min.js"></script>
    <script src="~/Content/AdminLTE-3.0.4/js/main.js"></script>

</body>
</html>


