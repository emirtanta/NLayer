@using NLayer.EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index";
}

@{ 
    string color = "";
}

<h2>Index</h2>

<br />

<a href="/Heading/AddHeading">Ekle</a>

<table class="table table-hover table-responsive ">
    <tr>
        <th>#</th>
        <th>Başlık Adı</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.HeadingID</td>
    <td>@item.HeadingName</td>
    @if (item.Category.CategoryName == "Tiyatro")
    {
        color = "text-danger";
    }
    <td class="@color">@item.Category.CategoryName</td>
    <td>@item.HeadingStatus</td>
    <td>
        <a href="/Content/ContentByHeading/@item.HeadingID">Yazara ait Yazılar</a>

        <a href="/Heading/EditHeading/@item.HeadingID">Düzenle</a>

        <a href="/Heading/DeleteHeading/@item.HeadingID">Sil</a>
    </td>
</tr>
    }

</table>


