@model NLayer.EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
}

<h2>Yeni Başlık Güncelleme</h2>

<br />

@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.HeadingID)

    @* başlık adı *@
    @Html.Label("Başlık Adı")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.HeadingName)

    <br />

    @* tarih bölümü *@
    @Html.Label("Başlık Tarihi")
    @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control" })

    <br />

    @* kategori dropdown *@
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryID)

    <br />

    @* yazar dropdown *@
    @Html.Label("Yazar")
    @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.vlw, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.WriterID)

    <br />

    @* buton bölümü *@
    <button class="btn btn-info">Başlık Güncelle</button>

</div>
}

